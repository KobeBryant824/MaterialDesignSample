<resources>

    <!-- Base application theme. -->
    <!--DarkActionBar have actionbar,but only toolbar work in with DrawerLayout-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--API5.0 TranslucentStatus -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--去掉启动白屏、黑屏，但是会增加启动时间-->
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.TransStatusBar" parent="AppTheme"/>

    <style name="CommonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/subheading</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

</resources>
